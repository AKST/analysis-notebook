{
  "compilerOptions": {
    "checkJs": true,
    "allowJs": true,
    "target": "ES2024",
    "module": "ES2022",
    "lib": ["ES2024", "DOM"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "strict": true,
    "typeRoots": ["./node_modules/@types"],
    "moduleDetection": "force",
    "skipLibCheck": true
  }
}
