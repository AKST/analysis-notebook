{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "../../out/tsc/lib/ui",
    "baseUrl": ".",
    "paths": {
      "@base/*": ["../base/*"],
      "@ui/*": ["./*"]
    }
  },
  "include": ["**/*.js", "**/*.ts", "*.js", "*.ts"],
  "references": [
    { "path": "../base" }
  ]
}
